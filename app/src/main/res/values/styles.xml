<resources>

    <style name="LoftTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="colorPrimaryDark">@color/green_dark</item>
        <item name="colorAccent">@color/green</item>
        <item name="colorPrimary">@color/green</item>

    </style>

    <style name="LoftTheme.Light" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimaryDark">@color/green_dark</item>
        <item name="colorAccent">@color/green</item>
        <item name="colorPrimary">@color/green</item>

    </style>

    <style name="LoftTheme.Login" parent="LoftTheme.Light" />

    <style name="LoftTheme.Main" parent="LoftTheme">
        <item name="drawerArrowStyle">@style/DrawerArrowStyle</item>
    </style>

    <style name="DrawerArrowStyle" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="spinBars">true</item>
        <item name="color">@android:color/white</item>
    </style>

    <style name="CustomDialog" parent="android:Theme.Dialog">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:background">@android:color/white</item>
    </style>

    <style name="Space">
        <item name="android:layout_weight">1</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
    </style>

    <style name="Container">
        <item name="android:orientation">vertical</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:gravity">center_horizontal</item>
    </style>

    <style name="Container.Dark">
        <item name="android:background">@drawable/android_app_back</item>
    </style>

    <style name="Text" parent="@android:style/TextAppearance" />

    <style name="Edit" parent="Text">
        <item name="android:textColor">@color/green</item>
        <!--<item name="android:textColorHint">@color/hint</item>-->
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <color name="hint">#EAEAEA</color>
</resources>
